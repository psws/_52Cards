@{
    ViewBag.Title = "_52Card";
}
@Html.AntiForgeryToken()


<h2>_52Card</h2>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <div class="panel-body">
            <fieldset>
                <div class="Card-inline-block">
                    <label id="CtrlSortLbl" for="CardSort"> Sort</label>
                    <button id="CardSort" name="CardSort">Sort</button>
                </div>
                <div class="Card-inline-block">
                    <label id="CtrlShufLbl" for="CardShuffle"> Shuffle</label>
                    <button id="CardShuffle" name="CardShuffle">Shuffle</button>
                </div>
                <div class="Card-inline-block">
                    <label id="CtrlGaneLbl" for="Game">Game</label>
                    <select name="Game" id="Game" style="white-space:pre">
                        <option id="Bridge">Bridge</option>
                    </select>
                </div>
                <label id="StateLabel"> </label>

            </fieldset>
        </div>
    </div>
</div>

<div class="container" id="CardCon">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="ListDiv">
            <div id="CardListPanel" name="CardListPanel" class="CardListPanel">

            </div>
        </div>
    </div>

</div>


<div id="updateProgressDiv" class="updateProgress" style="display: none;">
    <div style=" margin-top: 13px; text-align: center;">
        <img id="Image1" src="../../images/indicator_snake.gif" imagealign="Middle" />
        <span class="updateProgressMessage">Loading ...</span>
    </div>


</div>
